<Page
    x:Class="uwpMiddleProject.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:uwpMiddleProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/backgroud.jpg"></ImageBrush>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <RelativePanel Width="150" HorizontalAlignment="Left">
            <Button x:ConnectionId='10' Name="HamburgerButton" FontFamily="Segoe MDL2 Assets" Content="&#xE700;" FontSize="36" Grid.Row="0"                             ></Button>
        </RelativePanel>
        <SplitView x:ConnectionId='1' Name="MySplitView" DisplayMode="CompactOverlay" OpenPaneLength="150" CompactPaneLength="56" HorizontalAlignment="Left" Grid.Row="1">
            <SplitView.Pane>
                <ListBox x:ConnectionId='6' SelectionMode="Single" Name="IconsListBox"                                                 >
                    <ListBoxItem x:ConnectionId='7' Name="HomeListBoxItem">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="36" Text="&#xE10F;"></TextBlock>
                            <TextBlock Text="Home" FontSize="24" Margin="15,0,0,0"></TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='8' Name="RecordListBoxItem">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="36" Text="&#xE13D;"></TextBlock>
                            <TextBlock Text="Record" FontSize="24" Margin="15,0,0,0"></TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='9' Name="ShareListBoxItem">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="36" Text="&#xE72D;"></TextBlock>
                            <TextBlock Text="Share" FontSize="24" Margin="15,0,0,0"></TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </SplitView.Pane>
        </SplitView>
        
        <TextBlock Text="当前城市：" FontSize="30" Grid.Row="0" Margin="70,0,0,0"></TextBlock>
        <TextBox x:ConnectionId='2' Name="cityName" Text="广州" Width="100" Grid.Row="0" HorizontalAlignment="Left" Margin="210,0,0,0" FontSize="28"></TextBox>
        <TextBlock x:ConnectionId='3' Name="weatherText" Grid.Row="0" Text="天气" FontSize="30" Margin="400,0,0,0" HorizontalAlignment="Left"></TextBlock>
        <Button x:ConnectionId='4' Name="weatherQuery" Grid.Row="0" Content="查询" Margin="310,0,0,0" FontSize="27"                          ></Button>
        <Button x:ConnectionId='5' x:Name="start" Content="开始挑战" Grid.Row="1" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" FontSize="36"                          />

    </Grid>
</Page>

